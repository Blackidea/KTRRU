include ../container/container
include ../icon/icon
include ../image/image

mixin subscribe()
  +b.subscribe
    +image()(src='assets/images/subscribe.jpg')
    +container()
      +e('h2').heading Подпишитесь на рассылку
      +e('form').form
        +e.section
          +e('input').input(type='text', placeholder='Введите email')
        +e.section
          +e('button').btn Отправить
           +icon('subscribe').icon


