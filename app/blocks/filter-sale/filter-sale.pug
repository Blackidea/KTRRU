mixin filter-sale(data)
  +b.filter-sale._default#filterSale1&attributes(attributes)

    +e('ul').nav
      each link in data
        li.nav__item
          - var activeModifier = link.active ? '_active' : '';
          +division(link.title).A(href=link.path class=activeModifier).__division

    +container()#listTab-1
      +e('form').tab
        +e.content
          +e.col
            +e.item
              +e.field._type_select
                +select('item1', [{value: '1', title: 'item #1'}, {value: '2', title: 'item #2'}], false, 'Тип')
            +e.item
              +e.field._type_select
                +select('item2', [{value: '1', title: 'item #1'}, {value: '2', title: 'item #2'}], false, 'Верфь')
            +e.item
              +e.field._type_select
                +select('item3', [{value: '1', title: 'item #1'}, {value: '2', title: 'item #2'}], false, 'Модель')
            +e.item
              +e.field._type_select
                +select('item4', [{value: '1', title: 'item #1'}, {value: '2', title: 'item #2'}], false, 'Местоположение')

          +e.col
            +e.item
              +e('label').field._type_radio
                +radio({name: 'item5', value: '1', checked: true})
                +e('span').label Все
              +e('label').field._type_radio
                +radio({name: 'item5', value: '2'})
                +e('span').label Новые
              +e('label').field._type_radio
                +radio({name: 'item5', value: '3'})
                +e('span').label Б/у
            +e.item
              +e('span').label Год
              +e.field._type_text-field-group
                +e.field._type_text-field-small
                  +text-field({ name: 'item6', placeholder: 'от'})
                +e.separator
                +e.field._type_text-field-small
                  +text-field({ name: 'item7', placeholder: 'до'})
            +e.item
              +e('span').label Пассажиры
              +e.field._type_counter
                +counter({ name: 'item8', value: '2'})
            +e.item
              +e('span').label Спальных мест
              +e.field._type_counter
                +counter({name: 'item9', value: '2'})

          +e.col
            +e.item._col
              +e.row
                +e.label Длина
                +e.range-info
                  +e('span').range-info-text.js-filter-sale-length-min
                  +e('span').range-info-text.js-filter-sale-length-max
                  input(type='hidden' name='filter-min').js-filter-sale-length-min-val
                  input(type='hidden' name='filter-max').js-filter-sale-length-max-val
              +e.field._type_range
                +slider-range().js-filter-sale-length-slider

            +e.item._col._reset_margin
              +e('span').label._margin_bottom Цена
              +e.field._type_text-field-group._full_width
                +e.field._type_text-field-small
                  +text-field({name: 'item10', placeholder: 'от'})
                +e.separator
                +e.field._type_text-field-small
                  +text-field({name: 'item11', placeholder: 'до'})
                +e.field._type_select-currency
                  +select-currency()
              +e.field._type_reset-filter
                +reset-filter()

            +e.item
              +e.field._type_search-btn
                +button()(type='submit')._kind_red Найти

          +e.fixed-items
            +select('item111', [{value: '1', title: 'Купить'}, {value: '2', title: 'Арендовать'}])._text-like
            +e.field._type_select
              +select('item4', [{value: '1', title: 'item #1'}, {value: '2', title: 'item #2'}], false, 'Тип лодки')
            +e.field._type_select
              +select('item4', [{value: '1', title: 'item #1'}, {value: '2', title: 'item #2'}], false, 'Местоположение')
            +e.field._type_length
              +e.row
                +e.label Длина
                +e.range-info
                  +e('span').range-info-text.js-filter-sale-length-min
                  +e('span').range-info-text.js-filter-sale-length-max
                  input(type='hidden' name='filter-min').js-filter-sale-length-min-val
                  input(type='hidden' name='filter-max').js-filter-sale-length-max-val
              +e.field._type_range
                +slider-range().js-filter-sale-length-slider
            +e.field._type_price
              +e('span').label Цена
              +e.field._type_text-field-group
                +e.field._type_text-field-small
                  +text-field({name: 'item10', placeholder: 'от'})
                +e.separator
                +e.field._type_text-field-small
                  +text-field({name: 'item11', placeholder: 'до'})
                +e.field._type_select-currency
                  +select-currency()

            +e.buttons
              +e.field._type_search-btn
                +button()(type='submit')._kind_red Найти
              +e('a')(href='#').link Расширенный фильтр

        +e.roll-down
          +button()._rounded
            | Все параметры
            +icon('caret').icon._kind_caret._kind_caret-down._stroke_blue._right

        +e.extended-wrapper
          +additional-filter-params()
