        +e('img')(src='assets/images/yacht-club/grand-marine-logo.png').__logo
      +main-container().yacht-club__main-container
        +e.submenu._default
          +container
            +e('span').club Grand Marine
            +submenu(getData('submenu-club'))
        +e.H2.title.jqcontrol Услуги
          +icon('caret').icon._kind_caret
        +services()
        +e.slider.swiper-container
          +e.H2.title_events.jqcontrol-events.title
            span Мероприятия
            +icon('caret').icon._kind_caret
          +e.wrapper.swiper-wrapper
            +e.slide.swiper-slide
              +e.date 06
                +b('span') января
              +e.slide-inner
                +e('img').img(src='assets/images/events-slide.jpg')
