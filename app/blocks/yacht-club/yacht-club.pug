mixin yacht-club()
  +b.yacht-club
    +container()
      +page-header('Яхт-клуб Grand Marine', ['Главная', 'Яхт клубы', 'Яхт-клуб Grand Marine'])
      +e.box-bg
        +image-bg()(src='assets/images/yacht-club/yacht-club-banner.png')
