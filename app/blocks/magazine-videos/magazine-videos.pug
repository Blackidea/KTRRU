include ../main-container/main-container
include ../container/container
include ../page-header/page-header
include ../submenu/submenu
include ../video-preview/video-preview
include ../button/button
include ../banner/banner
include ../small-article-preview/small-article-preview

mixin magazine-videos()
  +b.magazine-videos&attributes(attributes)
    +container()
      +page-header('Журнал', ['Главная', 'Журнад', 'Видео-обзоры'])
      +main-container().main-container_shadow.magazine-videos__main-container
        +submenu(getData('submenu'))
        +e.content
          +e.videos-col
            - for (i=0; i<4; i++)
              +video-preview(getData('video-preview'))._col
            +button()._rounded._kind_red.__show-more Показать еще
          +e.sidebar
            +small-article-preview
              +submenu(getData('videos-filter'), true)
          +e.banner
            +banner('#', 'assets/images/banner2.jpg')
