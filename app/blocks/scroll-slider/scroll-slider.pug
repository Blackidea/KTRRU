include ../image-bg/image-bg
//- Аргумент - объект scroll-slider
//- data.name - наименование
//- data.path - путь изображения
mixin scroll-slider(data)
  +b('div').scroll-slider

    +e('div').gallery-top.swiper-container
      +e('ul').wrapper.swiper-wrapper
        each image in data.path
          +e('li').image.swiper-slide
            +image-bg()(src= image)

    +b('div').gallery-thumbs.swiper-container
      +e('ul').wrapper.swiper-wrapper
        each thumb in data.path
          +e('li').thumb.swiper-slide
            +image-bg()(src= thumb)
      +e('div').scrollbar.swiper-scrollbar
