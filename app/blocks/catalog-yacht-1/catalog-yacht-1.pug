include ../page-header/page-header
include ../container/container
include ../main-container/main-container
include ../banner/banner
include ../filter-model/filter-model
include ../button/button
include ../text/text
include ../models/models
include ../image-bg/image-bg
include ../yacht-slider/yacht-slider
include ../select/select
include ../article-preview/articles-grid
include ../article-preview/article-preview

mixin catalog-yacht-1()
  +b.catalog-yacht-1
    +container()
      +page-header('Крейсерские яхты со средиземноморским кокпитом', ['Главная', 'Каталог яхт', 'Крейсерские яхты со средиземноморским кокпитом'])
      +banner()
      +main-container().main-container_shadow.verphe__main-container
        +e.box-bg
          +image-bg()(src='assets/images/cruiser.jpg')
        +e.content
          +text().__text
            | Изучая различные виды яхт, вы скорее всего обратите внимание на
            | крейсерские яхты со средиземноморским кокпитом, которые
            | запоминаются своими формами, элегантностью и, в то же время, красотой.
        +text().H2.__header  Модельный ряд
        +filter-model()._catalog
        +e.sort
          +e.found
            +e('span').filter__label Найдено
            +e('span').sort__output 125
            +e('span') моделей
          +e.price
            +e('span').filter__label Сортировать
            - var filterData = getData('filter')
              +select(filterData.priceSort.name, filterData.priceSort.options).
        +models('', getData('sale-preview-item-extended'))._catalog
        +button()._rounded._kind_red.__button Показать еще
        +text().H2.__header Похожие категории
        +yacht-slider()
        +text().H2.__header Статьи по теме

        +articles-grid()
          .grid
            .stroke
              .col.col_three
                +article-preview(getData('article-preview_title-under-img_color_dark-blue'))._title-under-img
              .col.col_six
                +article-preview(getData('article-preview_title-inside-img_color_light-blue'))._title-inside-img
              .col.col_three
                +article-preview(getData('article-preview_title-inside-img_color_light-amber'))._title-inside-img
            .stroke
              .col.col_six
                .stroke
                  .col.col_six
                    +article-preview(getData('article-preview_title-inside-img_color_light-amber'))._title-inside-img
                  .col.col_six
                    +article-preview(getData('article-preview_title-under-img_color_dark-blue'))._title-under-img
                .stroke
                  .col.col_six
                    +article-preview(getData('article-preview_title-under-img_color_red'))._title-under-img
                  .col.col_six
                    +article-preview(getData('article-preview_title-under-img_color_light-amber'))._title-under-img
              .col.col_six
                .stroke
                  .col.col_twelve
                    +article-preview(getData('article-preview_title-inside-img_color_blue'))._title-inside-img._tall

        +button(true)(href='#')._rounded._kind_red.__button.__link Перейти в журнал
