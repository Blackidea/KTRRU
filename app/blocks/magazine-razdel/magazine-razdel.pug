include ../main-container/main-container
include ../container/container
include ../page-header/page-header
include ../submenu/submenu
include ../select/select
include ../dotted-dropdown/dotted-dropdown
include ../mobile-slide-popup/mobile-slide-popup
include ../button/button
include ../banner/banner
include ../article-preview/article-preview
include ../select/select

mixin magazine-razdel()
  +b.magazine-razdel&attributes(attributes)
    +container()
      +page-header('Журнал', ['Главная', 'Журнал', 'Путешествия'])
      +main-container().main-container_shadow.magazine-razdel__main-container
        +e('div').select-wrapper
          +submenu(getData('submenu'))
          +select('item10', [{value: '1', title: 'Все'}, {value: '2', title: 'Путешествия'}, {value: '3', title: 'Видео-обзоры'}], null, 'Категория')
          +dotted-dropdown()(data-target-modal='#magazine-mobile-filter').js-mobile-slide-popup
        +e.content
          - var data = getData('article-preview_title-under-img_magazine-razdel');
          +e.list
            +e.col
              - for (var i = 0; i < 4; i++)
                +e.item
                  if (i < 3)
                    +article-preview(data.row135[i])._title-under-img
                  else
                    +e.banner
                      +banner('#', 'assets/images/banner2.jpg')

            +e.col
              - for (var i = 0; i < 4; i++)
                +e.item
                  +article-preview(data.row2[i])._title-under-img

            +e.col
              - for (var i = 0; i < 4; i++)
                +e.item
                  if (i < 3)
                    +article-preview(data.row135[i])._title-under-img
                  else
                    +e.banner
                      +banner('#', 'assets/images/banner2.jpg')

            +e.col_revert
              - for (var i = 0; i < 4; i++)
               +e.item
                  if (i === 0)
                    +e.banner
                      +banner('#', 'assets/images/banner2.jpg')
                  else
                    +article-preview(data.row4[i-1])._title-under-img

            +e.col
              - for (var i = 0; i < 4; i++)
                +e.item
                  if (i < 3)
                    +article-preview(data.row135[i])._title-under-img
                  else
                    +e.banner
                      +banner('#', 'assets/images/banner2.jpg')

          +button()._rounded._kind_red.__show-more Показать еще
    +mobile-slide-popup()#magazine-mobile-filter
      | test
