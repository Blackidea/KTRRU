mixin sale-contacts-popup-offers()
  +e.about._borderless
    +e.heading Контакты продавца
  +e('ul').info._center
    +e.item
      +e.item-description._medium Михаил Александрович
    +e.item._inline
      +e.item-title Телефон:
      +e('ul').item-description
        li +7 (495) 77-11-700
        li +380 (98) 977 11 11
    +e.item._inline
      +e.item-title E-mail:
      +e.item-description sales@gmail.com
  +e.buttons
    +button(true)(href='#')._rounded._kind_white-border Написать сообщение
    +button(true)(href='#')._rounded._kind_red Заказать звонок

mixin sale-contacts-popup(pageName)
  +modal()#sale-contacts-popup.sale-contacts-popup-modal
    +b.sale-contacts-popup
      case pageName
        when 'shop'
          +sale-contacts-popup-shop()
        when 'catalog'
          +sale-contacts-popup-catalog()
        when 'offers'
          +sale-contacts-popup-offers()
